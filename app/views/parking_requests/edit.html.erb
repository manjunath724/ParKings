<h1>Allot Parking Slot for <%= @parking_request.car.identity %></h1>

<%= bootstrap_form_for(@parking_request) do |f| %>
  <%= f.collection_select :slot_id, @slots, :id, :specifics %>

  <%= f.submit class: 'btn btn-success col-md-4 col-md-offset-4' %>
<% end %>

<br><br>

<%= link_to 'Back', parking_requests_path, class: 'btn btn-sm btn-warning' %>
