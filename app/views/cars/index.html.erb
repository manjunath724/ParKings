<h1>Cars</h1>

<p class="pull-right">
  <%= link_to 'New Car', new_car_path, class: "btn btn-sm btn-primary" %>
</p>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Registration number</th>
        <th>Model</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.user.email %></td>
          <td><%= car.registration_number %></td>
          <td><%= car.model %></td>
          <td><%= car.color %></td>
          <td><%= link_to 'Show', car, class: "btn btn-sm btn-primary" %></td>
          <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-sm btn-default" %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
