<style type="text/css">
  table
  {
    table-layout: fixed;
    width: 100px;
  }
</style>

<p class="pull-right">
  <strong>Location:</strong>
  <%= @building.location %>
</p>

<p>
  <strong>Name:</strong>
  <%= @building.name %>
</p>

<% @building.floors.each do |f| %>
  <div class="table-responsive-sm">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <% slots = f.slots.count %>
        <tr>
          <th colspan="<%= slots %>"><center><%= f.name %></center></th>
        </tr>
        <tr>
          <% slots.times do |t| %>
            <th><center>Slot</center></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% f.slots.each do |s| %>
            <td colspan="1"><center><%= s.name %></center></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>

<%= link_to 'Back', buildings_path, class: 'btn btn-sm btn-warning' %> |
<%= link_to 'Edit', edit_building_path(@building), class: 'btn btn-sm btn-default' %>
